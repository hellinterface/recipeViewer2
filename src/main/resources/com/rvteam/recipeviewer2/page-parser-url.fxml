<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="700.0" spacing="8.0" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="40.0" prefWidth="200.0" styleClass="topPanel">
         <children>
            <Button mnemonicParsing="false" onAction="#onBackButtonClick" text="&lt; Назад" />
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="8.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="label_status" text="Вставьте ссылку рецепта с food.ru в поле ниже" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                   <TextField fx:id="textField_url" prefWidth="300.0" promptText="Ссылка с food.ru" text="https://food.ru/recipes/192011-plov-so-svininoy-v-multivarke" />
                   <Button fx:id="startImportButton" mnemonicParsing="false" onAction="#onStartImportButtonClick" text="Импортировать" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label text="или" />
                  <Button onAction="#onCreateNewButtonClick" mnemonicParsing="false" text="Создать новый" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
